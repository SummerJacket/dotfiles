<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

    <menu id="apps" label="Run">
        <item label="Terminal">
            <action name="Execute"><command>termite</command></action>
        </item>
        <separator />
        <item label="Files">
            <action name="Execute"><command>thunar</command></action>
        </item>
        <separator />
        <item label="Web">
            <action name="Execute"><command>chromium-browser</command></action>
        </item>
        <separator />
        <item label="Music">
            <action name="Execute"><command>spotify</command></action>
        </item>
    </menu>

    <menu id="power" label="Power">
        <item label="Log Off">
            <action name="Execute"><command>openbox --exit</command></action>
        </item>
        <separator />
        <item label="Shutdown">
            <action name="Execute">
                <command>systemctl poweroff</command>
            </action>
        </item>
        <separator />
        <item label="Restart">
            <action name="Execute">
                <command>systemctl reboot</command>
            </action>
        </item>
        <separator />
        <item label="Suspend">
            <action name="Execute"><command>systemctl suspend</command></action>
        </item>
    </menu>

    <menu id="root-menu" label="Openbox 3">
        <menu id="apps"/>
        <separator />
        <menu id="power"/>
        <separator />
        <separator />
        <item label="Reconfigure">
            <action name="Reconfigure" />
        </item>
    </menu>

</openbox_menu>

! Clickable links
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1


!! RICE

! Make minimal
*scrollBar:          false
*internalBorder:     20
*.geometry:          75x23

! Set font
*font:               xft:Hack:size=12
*boldFont:           xft:Hack:size=12
*letterSpace:        -1

! Change Cursor
!*cursorUnderline: true


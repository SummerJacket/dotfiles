#!/usr/bin/env sh

npx install-peerdeps --dev eslint-config-airbnb
npm install --save-dev eslint-config-prettier

echo '{
  "env": {
    "browser": true
  },
  "extends": ["airbnb", "airbnb/hooks", "prettier"]
}' > ./.eslintrc

echo '{
  "singleQuote": true,
  "trailingComma": "all"
}' > ./.prettierrc

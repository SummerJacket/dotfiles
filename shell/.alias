#!/usr/bin/env bash

# -- navigation -----------------------

alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias  l='ls -l'
alias la='ls -a'
alias ll='ls -al'

[[ "$OSTYPE" == "darwin"* ]] && alias ls='ls -G' || alias ls='ls --color=auto'

alias c='clear'
alias x='exit'

# -- git ------------------------------

alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit -m'
alias gca='git commit --amend'
alias gd='git diff'
alias gl='git log'
alias gs='git status'
alias gu='git reset HEAD --'
alias pull='git pull'
alias push='git push'

# -- javascript -----------------------

alias js='node'
alias n='npm'
alias ni='npm install'
alias nid='npm install --save-dev'
alias nip='npm install --save-prod'
alias ns='npm start'
alias nr='npm run'
alias nrd='npm run dev'
alias nt='npm test'
alias nu='npm uninstall'

# -- others ---------------------------

alias a='tmux attach'
alias t='tmux'
alias v='vim'

# not an alias but pretend that it is okay?
e () { emacs "$@" & disown; }

alias music='ncmpcpp'
alias wl='wal -no ~/scripts/wal-set.sh'
alias mp3='youtube-dl --extract-audio --audio-format mp3'

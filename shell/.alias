# -- navigation -----------------------

alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias  l='ls -l'
alias la='ls -a'
alias lg='ls | grep'
alias ll='ls -al'
alias ls='ls --color=auto'

alias c='clear'
alias x='exit'

# -- package manager ------------------

alias s='apt-cache search'
alias i='sudo apt install'
alias r='sudo apt purge'
alias u='sudo apt update && sudo apt upgrade'

# -- git ------------------------------

alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit -m'
alias gca='git commit --amend'
alias gd='git diff'
alias gl='git log'
alias gr='git reset HEAD'
alias gs='git status'
alias gu='git reset HEAD'
alias pull='git pull'
alias push='git push'

# -- applications ---------------------

alias js='node'
alias n='npm'
alias ni='npm install'
alias nid='npm install --save-dev'
alias ns='npm start'
alias nr='npm run'

alias a='tmux attach'
alias t='tmux'
alias v='vim'

# not an alias but pretend that it is okay?
e () { emacs "$@" & disown; }

alias sf='screenfetch -n'
alias nf='neofetch --off'
alias wl='wal -o ~/scripts/wal-set.sh'

alias ytdl='youtube-dl'
alias mp3='youtube-dl --extract-audio --audio-format mp3'

alias eslint-config-init='$HOME/scripts/eslint-config-init.sh'

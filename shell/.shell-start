#!/usr/bin/env sh

# --- enviroment variables ---

export EDITOR='vim'
export VISUAL='vim'

# load nvm if exists
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# load base16 shell if it exists
BASE16_SHELL="$HOME/.config/base16-shell/"
[ -n "$PS1" ] && \
      [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
              eval "$("$BASE16_SHELL/profile_helper.sh")"

# load nix shell if exists
[ -e $HOME/.nix-profile/etc/profile.d/nix.sh ] && \. $HOME/.nix-profile/etc/profile.d/nix.sh

# --- load aliases ---
source $HOME/.alias

# use escape sequences generated by wal
if [ ! $DISABLE_WAL ]; then
    (cat ~/.cache/wal/sequences &) 2> /dev/null
fi

# display a riddle or fortune
(fortune riddles fortunes && echo "") 2> /dev/null

# exit code 0 without `exit 0`
true

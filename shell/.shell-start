source $HOME/.alias
source $HOME/.env

export EDITOR='vim'
export VISUAL='vim'

# DISABLE_BASE16="true"

BASE16_SHELL=$HOME/.config/base16-shell/
[ -n "$PS1" ] && \
    [ -z "$DISABLE_BASE16" ] && \
    [ -s $BASE16_SHELL/profile_helper.sh ] && \
    eval "$($BASE16_SHELL/profile_helper.sh)"

(fortune riddles fortunes && echo "") 2> /dev/null

#!/usr/bin/env sh

# --- enviroment variables ---

export EDITOR='vim'
export VISUAL='vim'

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# --- load aliases ---
source $HOME/.alias

# use escape sequences generated by wal
if [ ! $DISABLE_WAL ]; then
    (cat ~/.cache/wal/sequences &) 2> /dev/null
fi

# display a riddle or fortune
(fortune riddles fortunes && echo "") 2> /dev/null

# exit code 0 without `exit 0`
true

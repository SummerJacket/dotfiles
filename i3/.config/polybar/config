foreground = ${self.base07}
foreground-alt = ${self.base04}
; }}}

[global/wm] ; {{{
margin-top = 5
margin-bottom = 5
; }}}

[bar/new] ;{{{
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
overline-color = #f00
underline-size = 2
underline-color = #00f

border-bottom = 2
border-bottom-color = ${colors.background}

spacing = 4
padding-left = 2
padding-right = 4
module-margin-left = 8
module-margin-right = 8

font-0 = source sans pro:size=8
font-1 = fontawesome:size=10
font-2 = source code pro:size=8

modules-left = i3 xwindow mpd
modules-center = 
modules-right = backlight volume battery date time
;modules-right = backlight volume xkeyboard memory cpu wlan eth battery temperature date powermenu

tray-position = right
tray-padding = 2
tray-detached = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev
; }}}

[module/xwindow] ; {{{
type = internal/xwindow
label = %title:0:30:...%
; }}}

[module/i3] ; {{{
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode = %mode%
label-mode-padding = 4
label-mode-foreground = #000
label-mode-background = #2b303b

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.base0C}
label-focused-padding = ${self.label-mode-padding}

label-unfocused = %index%
label-unfocused-padding = ${self.label-mode-padding}

label-urgent = %index%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.base09}
label-urgent-padding = ${self.label-mode-padding}

label-visible = %index%
label-visible-foreground = ${colors.foreground}
label-visible-padding = ${self.label-mode-padding}
; }}}

[module/mpd] ; {{{
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 2

format-online = <label-song>  <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>  <icon-repeat> <icon-random>

label-song-maxlen = 25
label-song-ellipsis = true

icon-prev = 
icon-seekb = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekf = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.foreground-alt}
toggle-off-foreground = ${colors.background-alt}
; }}}

[module/backlight] ; {{{
type = internal/xbacklight

format = <label> <bar>
label = " "

bar-width = 10
bar-indicator = ●
bar-indicator-foreground = ${colors.foreground}
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2

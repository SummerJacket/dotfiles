Config {
    font             = "xft:roboto:medium:size=9:antialias=true"
  , borderColor      = "#969896"
  , border           = NoBorder
  , bgColor          = "#1d1f21"
  , fgColor          = "#c5c8c6"
  , alpha            = 255
  , position         = BottomSize C 100 38
  , textOffset       = 24
  , iconOffset       = -1
  , lowerOnStart     = True
  , pickBroadest     = False
  , persistent       = False
  , hideOnStart      = False
  , iconRoot         = "."
  , allDesktops      = True
  , overrideRedirect = True
  , sepChar          = "%"
  , alignSep         = "}{"
  , template         = "      %StdinReader% }\
                       \    %date%\
                       \    <fc=#969896>//</fc>\
                       \    %time%\
                       \{ RAM %mem%\
                       \    <fc=#969896>//</fc>\
                       \    BRI %brightness%\
                       \    <fc=#969896>//</fc>\
                       \    VOL %volume%\
                       \    <fc=#969896>//</fc>\
                       \    BAT %battery%\
                       \      "
  , commands =
    [ Run StdinReader
    , Run Cpu     [ "-t", "<total>%" ] 10
    , Run Memory  [ "-t", "<usedratio>%" ] 10
    , Run Battery [ "-t", "<left>% <acstatus>"
                  , "--" -- battery specific options
                  -- discharging status
                  , "-o", "(<timeleft>)"
                  -- AC "on" status
                  , "-O", ""
                  -- charged status
                  , "-i", ""
                  ] 60
    , Run Date "%a %b %d" "date" 10
    , Run Date "%I:%M %p" "time" 10
    , Run Com "sh" ["-c", "free -m | grep Mem | awk '{print $3\" MB\"}'"] "mem" 10
    , Run Com "sh" ["-c", "~/scripts/info/brightness.sh intel_backlight"] "brightness" 30
    , Run Com "sh" ["-c", "~/scripts/info/volume.sh"] "volume" 5
    ]
  }

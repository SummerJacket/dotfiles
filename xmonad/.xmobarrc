-- -*- mode: haskell; eval: (flycheck-mode -1) -*-

Config {
    font             = "xft:roboto:size=9:antialias=true"
  , additionalFonts  = [ "xft:font awesome:size=10:antialias=true"
                       , "xft:font awesome:size=3:antialias=true"
                       ]
  , textOffsets      = [20, 16]
  , borderColor      = "#545862"
  , border           = NoBorder
  , bgColor          = "#282c34"
  , fgColor          = "#abb2bf"
  , alpha            = 255
  , position         = BottomSize C 100 30
  , textOffset       = 20
  , iconOffset       = -1
  , lowerOnStart     = True
  , pickBroadest     = False
  , persistent       = False
  , hideOnStart      = False
  , iconRoot         = "."
  , allDesktops      = True
  , overrideRedirect = True
  , sepChar          = "%"
  , alignSep         = "}{"
  , template         = "   %StdinReader% }\
                       \   <fc=#abb2bf><fn=1></fn></fc> %date%\
                       \   <fc=#545862>//</fc>\
                       \   <fc=#abb2bf><fn=1></fn></fc> %time%\
                       \{ <fc=#abb2bf><fn=1></fn></fc> %cpu%\
                       \   <fc=#545862>//</fc>\
                       \   <fc=#abb2bf><fn=1></fn></fc> %memory%\
                       \   <fc=#545862>//</fc>\
                       \   <fc=#abb2bf><fn=1></fn></fc> %brightness%\
                       \   <fc=#545862>//</fc>\
                       \   <fc=#abb2bf><fn=1></fn></fc> %volume%\
                       \   <fc=#545862>//</fc>\
                       \   <fc=#abb2bf><fn=1></fn></fc> %battery%\
                       \   "
  , commands =
    [ Run StdinReader
    , Run Cpu     [ "-t"       , "<total>%" ] 10
    , Run Memory  [ "-t"       , "<usedratio>%" ] 10
    , Run Battery [ "-t"       , "<left>% <acstatus>"
                  , "--" -- battery specific options
                    -- discharging status
                    , "-o"	, "(<timeleft>)"
                    -- AC "on" status
                    , "-O"	, "<fc=#e5c07b>Charging</fc>"
                    -- charged status
                    , "-i"	, "<fc=#98c379>Charged</fc>"
                  ] 60
    , Run Date "%a, %b %d" "date" 10
    , Run Date "%I:%M" "time" 10
    , Run Com "sh" ["-c", "~/scripts/info/brightness.sh intel_backlight"] "brightness" 30
    , Run Com "sh" ["-c", "~/scripts/info/volume.sh"] "volume" 5
    ]
  }

<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

    <menu id="run" label="run">
	<item label="web">
	    <action name="Execute">
		<command>firefox</command>
	    </action>
	</item>
	<item label="terminal">
	    <action name="Execute">
		<command>~/scripts/term.sh</command>
	    </action>
	</item>
	<item label="files">
	    <action name="Execute">
		<command>~/scripts/files.sh</command>
	    </action>
	</item>
	<item label="text">
	    <action name="Execute">
		<command>emacs</command>
	    </action>
	</item>
	<separator />
	<item label="wall">
	    <action name="Execute">
		<command>~/scripts/feh.sh</command>
	    </action>
	</item>
    </menu>

    <menu id="system" label="system">
	<item label="exit">
	    <action name="Execute">
		<command>openbox --exit</command>
	    </action>
	</item>
	<item label="suspend">
	    <action name="Execute">
		<command>systemctl suspend</command>
	    </action>
	</item>
	<item label="reboot">
	    <action name="Execute">
		<command>systemctl reboot</command>
	    </action>
	</item>
	<item label="poweroff">
	    <action name="Execute">
		<command>systemctl poweroff</command>
	    </action>
	</item>
    </menu>

    <menu id="root-menu" label="Openbox 3">
	<menu id="run"/>
	<menu id="system"/>
	<separator />
	<item label="reconfigure">
	    <action name="Reconfigure" />
	</item>
    </menu>

</openbox_menu>


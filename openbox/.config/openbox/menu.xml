<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="system" label="System">
    <item label="Exit">
      <action name="Execute">
        <command>openbox --exit</command>
      </action>
    </item>
    <item label="Suspend">
      <action name="Execute">
        <command>systemctl suspend</command>
      </action>
    </item>
    <item label="Reboot">
      <action name="Execute">
        <command>systemctl reboot</command>
      </action>
    </item>
    <item label="Poweroff">
      <action name="Execute">
        <command>systemctl poweroff</command>
      </action>
    </item>
  </menu>
  <menu id="root-menu" label="Openbox 3">
    <menu id="system"/>
    <separator />
    <item label="Refresh">
      <action name="Execute">
        <command>wal -Rno ~/scripts/wal-set.sh</command>
      </action>
    </item>
  </menu>
</openbox_menu>


## BORDERS

# Hide bloat
window.handle.width: 0
border.width: 0

# Set border width
window.client.padding.width: 0

# Set border color
window.*.client.color: #1f222d


## TITLE

# Add some padding
padding.width: 20
padding.height: 8

# Set title colors
window.*.title.bg: Solid Flat
window.*.*.bg: Parentrelative
window.*.title.bg.color: #2B303B
window.active.label.text.color: #E7E8EB
window.inactive.label.text.color: #989CA3

# Set buttons color
window.*.button.*.image.color: #E7E8EB


## MENU

# Set menu colors
menu.*.bg: Solid Flat
menu.*.bg.color: #2B303B
menu.*.text.color: #C0C5CE
menu.items.active.text.color: #3982A3

# Add some padding
menu.border.width: 16
menu.border.color: #2B303B

# Add some submenu padding
menu.overlap.x: -27
menu.overlap.y: 0

# Add padding between items
menu.separator.padding.height: 2
menu.separator.color: #2B303B
